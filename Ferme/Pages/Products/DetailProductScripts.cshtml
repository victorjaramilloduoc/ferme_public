<script>
    const traerProductoId = async () => {
        let urlParams = new URLSearchParams(location.search); //saca el id del queryparams de la url
        let response = await fetch(`../../api/product/producto/${urlParams.get("id")}`);
        if (response.ok) {
            let producto = await response.json();

        // document.getElementById("imagen").src = producto;
        document.getElementById("nombre").innerHTML = producto.nombre;
        document.getElementById("marca-producto").innerHTML = producto.marcaProducto;
        document.getElementById("precio").innerHTML = producto.precio;
        document.getElementById("descripcion").innerHTML = producto.descripcion;
        }
    }
    traerProductoId();
</script>